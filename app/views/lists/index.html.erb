<p id="notice"><%= notice %></p>

<h1>Listing Lists</h1>

<div class="card">
  <div class="card-body">

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Buyed</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lists.each do |list| %>
          <tr>
            <td><%= list.name %></td>
            <td><%= list.buyed %></td>
            <td><%= link_to 'Show', list %></td>
            <td><%= link_to 'Edit', edit_list_path(list) %></td>
            <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>

